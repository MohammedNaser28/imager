{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "dialog:allow-open",
    "fs:allow-read-dir",
    "fs:allow-copy-file",
    "fs:allow-remove",
    "fs:allow-mkdir",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    }
  ]
}